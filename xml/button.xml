<Border CornerRadius="5" BorderThickness="1" BorderBrush="#DDD" Background="#FAFAFA" Margin="10" Grid.Column="{{gridColumn}}" Grid.Row="{{gridRow}}">
    <Button Name="{{name}}" BorderThickness="0" Background="Transparent" Padding="5px" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="70*"/>
            </Grid.RowDefinitions>
            <Image Source="{{icon}}" Grid.Row="0"/>
            <StackPanel Grid.Row="1">
                <Label Content="{{title}}" FontSize="16px" FontWeight="Bold"/>
                <TextBlock Text="{{text}}" TextWrapping="Wrap" Margin="5px 0px"/>
            </StackPanel>
        </Grid>
    </Button>
</Border>
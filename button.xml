<Border CornerRadius="5" BorderThickness="1" BorderBrush="#DDD" Background="#FAFAFA" Margin="10" MinHeight="150" MinWidth="200" Grid.Column="{{gridColumn}}" Grid.Row="{{gridRow}}">
    <Button Name="{{name}}" BorderThickness="0" Background="Transparent" Padding="10px" VerticalAlignment="Stretch">
        <StackPanel>
            <Rectangle Width="32" Height="32" Margin="10">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{{icon}}"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label Content="{{title}}" FontSize="16px" FontWeight="Bold"/>
            <TextBlock Text="{{text}}" TextWrapping="Wrap" Margin="5px 0px"/>
        </StackPanel>
    </Button>
</Border>